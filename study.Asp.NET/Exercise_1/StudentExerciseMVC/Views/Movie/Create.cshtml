@model StudentExerciseMVC.Models.MovieViewModel
<h1>Create</h1>

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">

            </div>
            <div class="card-body">

                <form asp-controller="Movie" asp-action="CreateMovie" method="post">
                    <div class="mb-3">
                        <label class="form-label">MovieTitle</label>
                        <input asp-for=MovieTitle type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Director</label>
                        <input asp-for=Director type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Year</label>
                        <input asp-for=Year type="text" class="form-control" />
                    </div>
                    <div class="m-3">
                        <button class="btn btn-primary">Save</button>

                    </div>

                </form>

            </div>
            <div class="card-footer">
            </div>

        </div>
    </div>
</div>